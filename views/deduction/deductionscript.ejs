<script>
    $(document).ready(function () {
            LoadTable();
      
            $(document).on('click', '#addBtn', function () {
                let fullname = $('#fullname').val();
                let username = $('#username').val();
                let password = $('#password').val();
                let roletype = $('#rolelist').val();
                let accesstype = $('#positionlist').val();
                var message = "";
    
                if (fullname == '') { message += 'FULLNAME ' }
                if (username == '') { message += 'USERNAME ' }
                if (password == '') { message += 'PASSWORD ' }
                if (roletype == '') { message += 'ROLE ' }
                if (accesstype == '') { message += 'POSITION ' }
    
                if (message != '') {
                    warning('Required', `Please fill up ${message}`);
                }
                else {
                    $.ajax({
                        type: 'POST',
                        url: '/users/save',
                        data: {
                            fullname: fullname,
                            username: username,
                            password: password,
                            roletype: roletype,
                            accesstype: accesstype,
                        },
                        success: function (result) {
                            if (result.msg == 'success') {
                                LoadTable();
                                success('Saved', 'Successfully')
                            }
    
                            if (result.msg == 'exist') {
                                warning('Exist', `${fullname} has already registered!`);
                            }
    
                        },
                        error: function (err) {
                            errormsg(err);
                        }
                    })
                }
            })
          
        function LoadTable() {
                $('#deduction-dataTable').DataTable({
                    'destroy': true,
                    'processing': true,
                    'serverSide': true,
                    'paging': false,
                    'searching': false,
                    'info': false,
                    'scrollY': 400,
                    'scrollCollapse': true,
                    'serverMethod': 'GET',
                    'ajax': {
                        'url': '/deduction/load',
                        'dataSrc': (json) => {
                            var finalData = [];
                            var data = json.data;
    
                            console.log(data);
                            $.each(data, (key, item) => {
                                var action = '';
                                var status = item.status;
    
                                if (status == 'ACTIVE') {
                                action = '<button id="editBtn" class="btn btn-outline-primary" name="editBtn">EDIT</button> <button id="inactiveBtn" class="btn btn-outline-primary" name="inactiveBtn">INACTIVE</button>'
                                }
                                if (status == 'INACTIVE') {
                                    action = '<button id="editBtn" class="btn btn-outline-primary" name="editBtn">EDIT</button> <button id="activeBtn" class="btn btn-outline-primary" name="activeBtn">ACTIVE</button>'
                                }
    
                                finalData.push({
                                    employeeid: item.employeeid,
                                    late: item.late,
                                    absent: item.absent,
                                    sss: item.sss,
                                    hdmf: item.hdmf,
                                    philhealth: item.philhealth,
                                    cashadvance: item.cashadvance,
                                    loan: item.loan,
                                    tax: item.tax,
                                    payrolldate: item.payrolldate,
                                    cutoffdate: item.cutoffdate,
                                    action: action,
                                })
    
                            })
    
                            return finalData;
                        },
                    },
                    'columnDefs': [{
                        targets: 1,
                        className: 'td-indent',
                    }],
                    'columns': [
                        { data: 'employeeid' },
                        { data: 'late' },
                        { data: 'absent' },
                        { data: 'sss' },
                        { data: 'hdmf' },
                        { data: 'philhealth' },
                        { data: 'cashadvance' },
                        { data: 'loan' },
                        { data: 'tax' },
                        { data: 'payrolldate' },
                        { data: 'cutoffdate' },
                        { data: 'action' },
                    ],
                    initComplete: function () {
                        console.log('init complete');
                    }
                });
            }
        })
    </script>